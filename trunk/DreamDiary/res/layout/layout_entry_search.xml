<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:id="@+id/criteria_search_view" 
    >

    <ListView
        android:id="@+id/search_criteria_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        tools:listitem="@layout/layout_search_tuple" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <ImageButton
            android:id="@+id/add_new_search_criteria_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:contentDescription="@string/add_entry_button_label"
            android:src="@android:drawable/ic_input_add" />
        
         <ImageButton
	        android:id="@+id/search_button"
	        android:layout_width="wrap_content"
	        android:layout_height="45dp"
	        android:contentDescription="@android:string/search_go"
	        android:src="@drawable/ic_action_search" />
    </LinearLayout>
</LinearLayout>